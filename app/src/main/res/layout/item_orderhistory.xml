<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvXuhao"
        android:layout_margin="@dimen/px10dp"
        android:textStyle="bold"
        android:text="第一次竞价"
        android:textSize="@dimen/px40dp"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/tvTime"
        android:layout_margin="@dimen/px10dp"
        android:text=""
        android:textSize="@dimen/px30dp"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/tvjj"
        android:layout_margin="@dimen/px10dp"
        android:text=""
        android:textSize="@dimen/px30dp"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/tvNum"
        android:layout_margin="@dimen/px10dp"
        android:text=""
        android:textSize="@dimen/px30dp"
        android:textColor="@color/color_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_margin="@dimen/px10dp"
        android:visibility="gone"
        android:id="@+id/llbyCar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="司机姓名"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>

            <TextView
                android:id="@+id/tv_drivername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>
        </LinearLayout>
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>

            <TextView
                android:id="@+id/tvcarno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>
        </LinearLayout>
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px96dp">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车次"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>

            <TextView
                android:id="@+id/tvcarnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/common_line"></include>



</LinearLayout>