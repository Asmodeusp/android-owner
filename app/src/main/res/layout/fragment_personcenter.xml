<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool"
        layout="@layout/common_toolbar"></include>



        <RelativeLayout
            android:id="@+id/rlhead"
            android:layout_marginTop="@dimen/px10dp"
            android:background="@color/white"
            android:layout_below="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp">
            <TextView
                android:textColor="@color/gray333"
                android:layout_marginLeft="@dimen/px20dp"
                android:textSize="@dimen/px28dp"
                android:gravity="center_vertical"
                android:text="头像"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.saimawzc.shipper.weight.CircleImageView

                    android:textSize="@dimen/px30dp"
                    android:id="@+id/imgHead"
                    android:src="@drawable/ico_app"
                    android:layout_width="@dimen/px80dp"
                    android:layout_height="@dimen/px80dp" />
                <ImageView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlsex"
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/white"
        android:layout_below="@+id/rlhead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp">
        <TextView
            android:layout_marginLeft="@dimen/px20dp"
            android:textSize="@dimen/px30dp"
            android:gravity="center_vertical"
            android:text="性别"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/px30dp"
                android:id="@+id/tvSex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px80dp" />
            <ImageView
                android:layout_marginRight="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:src="@drawable/ico_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="@dimen/px2dp"
        android:background="@color/white"
        android:layout_below="@+id/rlsex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp">
        <TextView
            android:textColor="@color/gray333"
            android:layout_marginLeft="@dimen/px20dp"
            android:textSize="@dimen/px28dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/px20dp"
                android:textColor="@color/gray666"
                android:gravity="center"
                android:text=""
                android:textSize="@dimen/px28dp"
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px80dp" />
            <ImageView
                android:visibility="gone"
                android:layout_marginRight="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:src="@drawable/ico_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvSave"
        android:gravity="center"
        android:text="保存"
        android:scrollbarSize="@dimen/px30dp"
        android:textColor="@color/white"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp">

    </TextView>
</RelativeLayout>