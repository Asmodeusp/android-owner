<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/selector_bg"
    android:layout_marginLeft="@dimen/px24dp"
    android:layout_marginRight="@dimen/px24dp"
    android:layout_marginBottom="@dimen/px20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <include layout="@layout/common_adress"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:src="@drawable/ic_gf_default_photo"></ImageView>

        <ImageView
            android:layout_marginTop="30dp"
            android:id="@+id/imgPhone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ico_dianhua"
            android:visibility="visible">

        </ImageView>
        <LinearLayout
            android:layout_marginTop="@dimen/px20dp"
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUitl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>



            <TextView
                android:id="@+id/tvcarinfo"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray333"
                android:textSize="@dimen/px28dp"></TextView>

            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUitl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">
                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/goodinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="@dimen/px30dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_marginTop="@dimen/px20dp"
            android:id="@+id/view"
            android:layout_below="@+id/rl"
            android:background="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp"></View>

        <LinearLayout
            android:layout_marginRight="@dimen/px30dp"
            android:layout_marginBottom="@dimen/px30dp"
            android:layout_marginTop="@dimen/px30dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/px30dp"
                android:id="@+id/ico_more"
                android:layout_width="@dimen/px100dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ico_more"
                    android:layout_width="@dimen/px50dp"
                    android:layout_height="@dimen/px50dp">

                </ImageView>
            </LinearLayout>


            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/viewtab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10dp"
                    android:background="@drawable/shape_list_btn"
                    android:paddingLeft="@dimen/px22dp"
                    android:paddingTop="@dimen/px16dp"
                    android:paddingRight="@dimen/px22dp"
                    android:paddingBottom="@dimen/px16dp"
                    android:text=""
                    android:textColor="@color/gray333">

                </TextView>
                <TextView
                    android:paddingTop="@dimen/px16dp"
                    android:paddingBottom="@dimen/px16dp"
                    android:paddingLeft="@dimen/px22dp"
                    android:paddingRight="@dimen/px22dp"
                    android:id="@+id/viewtab2"
                    android:layout_marginLeft="@dimen/px10dp"
                    android:textColor="@color/gray333"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:paddingTop="@dimen/px16dp"
                    android:paddingBottom="@dimen/px16dp"
                    android:paddingLeft="@dimen/px22dp"
                    android:paddingRight="@dimen/px22dp"
                    android:id="@+id/viewtab3"
                    android:layout_marginLeft="@dimen/px10dp"
                    android:textColor="@color/gray333"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>