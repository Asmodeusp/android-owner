<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/withe"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp" />

            <TextView
                android:id="@+id/tvphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px30dp"
                android:layout_toRightOf="@+id/tvName"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp" />

            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="@dimen/px200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px30dp"
                android:gravity="right"
                android:text="" />
        </RelativeLayout>

        <include layout="@layout/common_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:gravity="center_vertical"
                android:text="总价："
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp" />

            <TextView
                android:id="@+id/edtrantPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px60dp"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/gray666"
                android:textSize="@dimen/px26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginRight="@dimen/px30dp"
                android:text="元">

            </TextView>
        </RelativeLayout>

        <include layout="@layout/common_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:gravity="center_vertical"
                android:text="分配量："
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp" />

            <TextView
                android:id="@+id/edtrantNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px30dp"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/gray666"
                android:textSize="@dimen/px26dp" />
        </RelativeLayout>
        <include layout="@layout/common_line"></include>
        <RelativeLayout
            android:id="@+id/surplusRelative"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:gravity="center_vertical"
                android:text="剩余量："
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp" />

            <TextView
                android:id="@+id/surplusNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px30dp"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="@color/gray666"
                android:textSize="@dimen/px26dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px20dp"
            android:paddingTop="@dimen/px20dp"
            android:paddingBottom="@dimen/px20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否同意停运申请："
                android:textColor="@color/gray888"
                android:textSize="@dimen/px28dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@drawable/shape_list_btn"
                    android:gravity="center"
                    android:paddingLeft="@dimen/px40dp"
                    android:paddingTop="@dimen/px12dp"
                    android:paddingRight="@dimen/px40dp"
                    android:paddingBottom="@dimen/px12dp"
                    android:text="同意">

                </TextView>

                <TextView
                    android:id="@+id/tvRefuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:background="@drawable/shape_list_btn_blue"
                    android:gravity="center"
                    android:paddingLeft="@dimen/px40dp"
                    android:paddingTop="@dimen/px12dp"
                    android:paddingRight="@dimen/px40dp"
                    android:paddingBottom="@dimen/px12dp"
                    android:text="拒绝"
                    android:textColor="@color/white">

                </TextView>
            </LinearLayout>


        </LinearLayout>
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:id="@+id/suggestLinear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="停运理由："
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/suggest_text"
                android:padding="10dp"
                android:text=""
                android:layout_margin="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px10dp"
        android:background="@color/bg">

    </View>


</LinearLayout>