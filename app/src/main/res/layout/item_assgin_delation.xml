<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvName"
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/color_black"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="@dimen/px28dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_toRightOf="@+id/tvName"
                android:layout_centerVertical="true"
                android:id="@+id/tvphone"
                android:layout_marginLeft="@dimen/px30dp"
                android:textColor="@color/color_black"
                android:text=""
                android:gravity="center_vertical"
                android:textSize="@dimen/px28dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="right"
                android:id="@+id/tvstatus"
                android:text=""
                android:layout_marginRight="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_width="@dimen/px200dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
       <include layout="@layout/common_line"></include>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/color_black"
                android:text="总价："
                android:gravity="center_vertical"
                android:textSize="@dimen/px28dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:textColor="@color/gray666"
                android:textSize="@dimen/px26dp"
                android:id="@+id/edtrantPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px60dp"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:text="" />

            <TextView
                android:layout_marginRight="@dimen/px30dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>
      <include layout="@layout/common_line"></include>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/color_black"
                android:text="分配量："
                android:gravity="center_vertical"
                android:textSize="@dimen/px28dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

           <TextView
               android:id="@+id/edtrantNum"
            android:inputType="numberDecimal"
            android:background="@null"
            android:hint=""
            android:text=""
               android:textColor="@color/gray666"
               android:textSize="@dimen/px26dp"
            android:layout_marginRight="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="@dimen/px20dp"
            android:paddingBottom="@dimen/px20dp"
            android:paddingTop="@dimen/px20dp"
            android:background="@color/white"
            android:id="@+id/llBtn"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/gray888"
                android:textSize="@dimen/px28dp"
                android:text="是否同意停运申请："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_marginRight="@dimen/px20dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="@dimen/px12dp"
                    android:paddingBottom="@dimen/px12dp"
                    android:paddingLeft="@dimen/px40dp"
                    android:paddingRight="@dimen/px40dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvAgreen"
                    android:gravity="center"
                    android:background="@drawable/shape_list_btn"
                    android:text="同意"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/px12dp"
                    android:paddingBottom="@dimen/px12dp"
                    android:paddingLeft="@dimen/px40dp"
                    android:paddingRight="@dimen/px40dp"
                    android:id="@+id/tvRefuse"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:gravity="center"
                    android:background="@drawable/shape_list_btn_blue"
                    android:text="拒绝"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <View
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px10dp">

    </View>




</LinearLayout>