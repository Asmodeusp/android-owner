<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@drawable/shape_white_top"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_delete_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除图片"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px32dp" />

        </LinearLayout>

        <include layout="@layout/common_line"></include>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_editor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑图片"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px32dp" />


        </LinearLayout>
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:id="@+id/linear_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px32dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
