<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tvName"
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/color_black"
                android:text="dddddd"
                android:gravity="center_vertical"
                android:textSize="@dimen/px28dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_marginRight="@dimen/px30dp"
                android:src="@drawable/ico_delete"
                android:gravity="left"
                android:id="@+id/imgDelete"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <View
        android:background="@color/divider_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"></View>

</LinearLayout>