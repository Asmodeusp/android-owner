<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/px2dp"
    android:paddingRight="@dimen/px40dp"
    android:paddingLeft="@dimen/px40dp"
    android:background="@drawable/ico_tanchu_right"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/px80dp"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/rlnosh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:text="未审核"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/rlnumach"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="未分配"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/rlfailsh"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/px20dp"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="审核失败"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/rlbidd"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="竞价中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/px60dp"
        android:layout_marginTop="@dimen/px30dp"
        android:id="@+id/rlalreadyfp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="已分配"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>