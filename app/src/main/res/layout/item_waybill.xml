<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/selector_bg"
    android:layout_marginLeft="@dimen/px24dp"
    android:layout_marginRight="@dimen/px24dp"
    android:layout_marginTop="@dimen/px20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <include layout="@layout/common_adress"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:src="@drawable/ic_gf_default_photo">
        </ImageView>

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预运单号："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总重量："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="创建时间："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvCreatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_marginRight="@dimen/px30dp"
            android:id="@+id/view"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_below="@+id/rl"
            android:background="@color/bg_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp"></View>


        <LinearLayout
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/px20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="@dimen/px30dp"
                android:layout_marginBottom="@dimen/px24dp"
                android:layout_marginTop="@dimen/px24dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/viewtab1"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:paddingTop="@dimen/px18dp"
                    android:paddingBottom="@dimen/px18dp"
                    android:paddingLeft="@dimen/px35dp"
                    android:paddingRight="@dimen/px35dp"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px24dp"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:paddingLeft="@dimen/px35dp"
                    android:paddingRight="@dimen/px35dp"
                    android:gravity="center"
                    android:id="@+id/viewtab2"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:paddingTop="@dimen/px18dp"
                    android:paddingBottom="@dimen/px18dp"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px24dp"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:paddingLeft="@dimen/px35dp"
                    android:paddingRight="@dimen/px35dp"
                    android:gravity="center"
                    android:id="@+id/viewtab3"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:paddingTop="@dimen/px18dp"
                    android:paddingBottom="@dimen/px18dp"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px24dp"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:paddingLeft="@dimen/px35dp"
                    android:paddingRight="@dimen/px35dp"
                    android:gravity="center"
                    android:id="@+id/viewtab4"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:paddingTop="@dimen/px18dp"
                    android:paddingBottom="@dimen/px18dp"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px24dp"
                    android:background="@drawable/shape_list_btn"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>