<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="@dimen/px100dp"
                android:layout_height="@dimen/px100dp"
                android:layout_marginLeft="@dimen/px40dp"
                android:layout_marginTop="@dimen/px40dp"
                android:layout_marginBottom="@dimen/px40dp"
                android:scaleType="centerCrop" />
            <LinearLayout
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_toRightOf="@+id/imgView"
                android:layout_marginTop="@dimen/px40dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/tvname"
                    android:textSize="@dimen/px30dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/px20dp"
                    android:id="@+id/tvphone"
                    android:textSize="@dimen/px30dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

       <include layout="@layout/common_line"></include>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="删除"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

</LinearLayout>