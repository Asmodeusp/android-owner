<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20dp"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"></TextView>

        <TextView
            android:id="@+id/tvRole"
            android:paddingLeft="@dimen/px20dp"
            android:paddingRight="@dimen/px20dp"
            android:background="@drawable/shape_list_btn"
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="路线"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60dp">

        </TextView>

    </RelativeLayout>
    <include layout="@layout/common_line"></include>


    <RelativeLayout
        android:layout_margin="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ico_goodname"
                    android:layout_width="@dimen/px34dp"
                    android:layout_height="@dimen/px34dp">

                </ImageView>
                <TextView
                    android:layout_marginLeft="@dimen/px16dp"
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ico_fahuoadress"
                    android:layout_width="@dimen/px34dp"
                    android:layout_height="@dimen/px34dp">

                </ImageView>
                <TextView
                    android:layout_marginLeft="@dimen/px16dp"
                    android:id="@+id/tvSendAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ico_fahuoadress"
                    android:layout_width="@dimen/px34dp"
                    android:layout_height="@dimen/px34dp">

                </ImageView>
                <TextView
                    android:layout_marginLeft="@dimen/px16dp"
                    android:id="@+id/tvReceiveAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"></TextView>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>