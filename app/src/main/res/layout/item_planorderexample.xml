<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp">

        <TextView
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:text="发货地--收货地"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:gravity="center"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="未审核"
            android:layout_width="@dimen/px100dp"
            android:layout_height="match_parent">

        </TextView>

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/divider_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp">

    </View>

    <RelativeLayout
        android:layout_margin="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_marginTop="@dimen/px40dp"
            android:layout_marginLeft="@dimen/px20dp"
            android:src="@drawable/ico_app"></ImageView>

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>
            <TextView
                android:id="@+id/tvWeight"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>
            <TextView
                android:id="@+id/tvCreatTime"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>


        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_below="@+id/rl"
            android:background="@color/drivel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp"></View>

        <LinearLayout
            android:layout_marginTop="@dimen/px20dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/viewDelete"
                android:padding="@dimen/px20dp"
                android:background="@drawable/shape_order_btn"
                android:text="审核"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>


    </RelativeLayout>
    <View
        android:background="@color/divider_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"></View>



</LinearLayout>