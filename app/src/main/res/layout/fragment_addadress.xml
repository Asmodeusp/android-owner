<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/common_toolbar"></include>
        <RelativeLayout
            android:id="@+id/rlContarct"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:paddingLeft="@dimen/px20dp"
                android:textSize="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="联系人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvContract"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlUtil"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:paddingLeft="@dimen/px20dp"
                android:textSize="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="选择单位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvUntil"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_area"
            android:layout_marginTop="@dimen/px2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:paddingLeft="@dimen/px20dp"
                android:textSize="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="所在地区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvarea"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rldelationadress"
            android:layout_marginTop="@dimen/px2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:paddingLeft="@dimen/px20dp"
                android:textSize="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="详细地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/eddelationadress"
                    android:background="@null"
                    android:text=""
                    android:hint="输入详细地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/px2dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:paddingLeft="@dimen/px20dp"
                android:textSize="@dimen/px30dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="简略地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:textColor="@color/color_black"
                    android:layout_marginRight="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:hint="输入邮箱"
                    android:id="@+id/edemail"
                    android:background="@null"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/btnOrder"
        android:textSize="@dimen/px30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp">

    </TextView>
</RelativeLayout>